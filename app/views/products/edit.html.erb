<h2>Edit Product</h2>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.submit %>
<% end %>
